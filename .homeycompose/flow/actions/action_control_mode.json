{
  "id": "action_control_mode",
  "title": {
    "en": "Set clean speed",
    "nl": "Stel zuigkracht in"
  },
  "titleFormatted": {
    "en": "Set mode to [[action_control_mode_type]]",
    "nl": "Stel modus in op [[action_control_mode_type]]"
