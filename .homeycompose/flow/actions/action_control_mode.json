        },
        {
          "id": "GO_HOME",
          "label": {
            "en": "Go Home / Dock",
            "nl": "Ga naar huis / Dock"
          }
        },
        {
          "id": "STOP",
          "label": {
            "en": "Stop",
            "nl": "Stop"
          }
        },
        {
          "id": "PAUSE",
          "label": {
            "en": "Pause",
            "nl": "Pauze"
          }
        },
        {
          "id": "PLAY",
          "label": {
            "en": "Resume",
            "nl": "Hervatten"
          }
        }
      ]
