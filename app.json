      "type": "enum",
      "title": {
        "en": "Work mode",
        "nl": "Werk modus"
      },
      "uiComponent": "sensor",
      "icon": "assets/icons/droplet-half.svg",
      "getable": true,
      "setable": true,
      "values": [
        {
          "id": "auto",
          "title": {
            "en": "Auto",
            "nl": "Auto"
          }
        },
        {
          "id": "Nosweep",
          "title": {
            "en": "No Sweep",
            "nl": "Niet dweilen"
