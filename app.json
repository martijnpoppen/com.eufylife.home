  "drivers": [
    {
      "id": "L_SERIES",
      "class": "vacuumcleaner",
      "capabilities": [
        "vacuumcleaner_state",
        "measure_work_mode",
        "measure_battery",
        "measure_is_charging",
        "measure_recharge_needed"
      ],
      "energy": {
        "batteries": ["INTERNAL"]
      },
      "name": {
        "en": "Eufy Robovac L-Series",
        "nl": "Eufy Robovac L-Series"
      },
      "images": {
        "large": "drivers/L_SERIES/assets/images/large.jpg",
        "small": "drivers/L_SERIES/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "login_eufy"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "prev": "login_eufy",
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "id": "deviceId",
          "type": "text",
          "label": {
            "en": "Device ID",
            "nl": "Device ID"
          },
          "value": ""
        },
        {
          "id": "localKey",
          "type": "text",
          "label": {
            "en": "Local Key",
            "nl": "Local Key"
          },
          "value": ""
        },
        {
          "id": "ip",
          "type": "text",
          "label": {
            "en": "IP Address",
            "nl": "IP Adres"
          },
          "value": ""
        }
      ]
    }
  ],
  "capabilities": {
    "measure_is_charging": {
      "type": "boolean",
      "title": {
        "en": "Is Charging",
        "nl": "Opladen"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "assets/icons/battery-charging.svg",
      "$flow": {
        "triggers": [
          {
            "id": "measure_is_charging_changed",
            "title": {
              "en": "Charging has changed",
              "nl": "Opladen is veranderd"
            },
            "tokens": [
              {
                "name": "measure_is_charging",
                "title": {
                  "en": "Is Charging",
                  "nl": "Opladen"
                },
                "type": "boolean"
              }
            ]
          }
        ]
      }
    },
    "measure_recharge_needed": {
      "type": "boolean",
      "title": {
        "en": "Recharge needed",
        "nl": "Opladen vereist"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "assets/icons/battery-half.svg",
      "$flow": {
        "triggers": [
          {
            "id": "measure_recharge_needed_changed",
            "title": {
              "en": "Recharge needed has changed",
              "nl": "Opladen vereist is veranderd"
            },
            "tokens": [
              {
                "name": "measure_recharge_needed",
